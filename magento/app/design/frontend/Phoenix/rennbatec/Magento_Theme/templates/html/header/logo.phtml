    function minicartClick($) {
        $('#minicart-large-device .bg-right a').click(function() {
            $('#minicart-content-wrapper .block-content .items-total span:nth-child(2)').html('<?php echo __('item'); ?>');
            $('#minicart-content-wrapper .subtotal .label span').html('<?php echo __('Cart Subtotal'); ?>');
            $('#minicart-content-wrapper #top-cart-btn-checkout span').html('<?php echo __('Go to Checkout'); ?>');
            $('#minicart-content-wrapper .actions .secondary .viewcart span span').html('<?php echo __('View and edit cart'); ?>');
            $('#minicart-content-wrapper .block-content .subtitle.empty span').html('<?php echo __('You have no items in your shopping cart.'); ?>');
            $('#minicart-content-wrapper .minicart-items .product-item-pricing .details-qty label').html('<?php echo __('Qty'); ?>');
            $('#minicart-content-wrapper .minicart-items .product-item-pricing .details-qty button span').html('<?php echo __('Update'); ?>');
            $('#minicart-content-wrapper a.action.delete').click(function() {
                setTimeout(function(){
                    $('.modal-content div').html('<?php echo __('Are you sure you would like to remove this item from the shopping cart?'); ?>');
                    $('.modal-footer .action-dismiss span').html('<?php echo __('Cancel'); ?>');
                }, 100);
            });

        });

    }

    function searchClick($) {
        var obj = $('#search_mini_form .control input');
        var objLabel = $('#search_mini_form .field.search label');
        objLabel.unbind().click(function() {
            obj.css('position') ==  'static'?obj.css('position', 'absolute'):obj.css('position', 'static');
        });
    }
    
    function passwordReset($) {
        var obj = $('.form.password.reset button');
        obj.unbind().click(function() {
            setTimeout(function(){
                var valPassError = $('#password-error').html();
                if(valPassError == 'This is a required field.') {
                    $('#password-error').html('<?php echo __('This is a required field.'); ?>');
                } else if (valPassError == 'Please enter 6 or more characters. Leading or trailing spaces will be ignored.') {
                    $('#password-error').html('<?php echo __('Please enter 6 or more characters. Leading or trailing spaces will be ignored.'); ?>');
                }
                var confirmPassError = $('#password-confirmation-error').html();
                if(confirmPassError == 'This is a required field.') {
                    $('#password-confirmation-error').html('<?php echo __('This is a required field.'); ?>');
                } else if(confirmPassError == 'Please enter the same value again.') {
                    $('#password-confirmation-error').html('<?php echo __('Please enter the same value again.'); ?>');
                }
            }, 50);
        });
    }

</script>
